import requests

API_BASE_URL = "https://datos.gob.es/apidata/"

def fetch_gov_data(endpoint):
    url = f"{API_BASE_URL}{endpoint}"
    response = requests.get(url)
    if response.status_code == 200:
        return response.json()
    else:
        return None

def display_gov_data(data):
    if data:
        # Format and display the data as needed
        print("Government Data:")
        for item in data:
            print(f"Title: {item['title']}, Description: {item['description']}")
    else:
        print("Failed to fetch data.")

def fetch_and_display_gov_data(endpoint):
    data = fetch_gov_data(endpoint)
    display_gov_data(data)

def main_menu():
    while True:
        print("Main Menu:")
        print("1. Existing Option 1")
        print("2. Existing Option 2")
        print("3. Fetch Government Data")
        print("4. Exit")
        choice = input("Enter your choice: ")

        if choice == '1':
            # Existing functionality
            pass
        elif choice == '2':
            # Existing functionality
            pass
        elif choice == '3':
            endpoint = input("Enter the API endpoint to fetch data from: ")
            fetch_and_display_gov_data(endpoint)
        elif choice == '4':
            break
        else:
            print("Invalid choice. Please try again.")

if __name__ == "__main__":
    main_menu()
